<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".SuccessBuyTicketActivity">

    <ImageView
        android:id="@+id/icon_success_buy"
        android:layout_width="285dp"
        android:layout_height="350dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/icon_success_ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mmedium"
        android:layout_marginBottom="10dp"
        android:text="Selamat Menikmati"
        android:textAlignment="center"
        android:textColor="@color/colorFontDark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/success_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/success_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mlight"
        android:layout_marginBottom="30dp"
        android:text="Kamu berhasil beli tiketnya. \nYuk persiapan liburan!"
        android:textAlignment="center"
        android:textColor="@color/colorFontDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_ticket"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_btn_gradient_violet"
        android:fontFamily="@font/mmedium"
        android:text="@string/btn_ticket"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_btn_white_stroke"
        android:fontFamily="@font/mmedium"
        android:text="@string/btn_menu_utama"
        android:textAllCaps="false"
        android:textColor="@color/colorFontDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>